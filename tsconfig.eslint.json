{
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
    "emitDeclarationOnly": false,
    "noEmit": true
  },
  "parserOptions": {
    "extraFileExtensions": [
      ".mjs",
      ".tsx"
    ]
  },
  "include": [
    "apps/**/*",
    "packages/*/.eslintrc.js",
    "packages/*/src/**/*",
    "packages/*/tests/**/*",
    "packages/*/types/**/*",
    "scripts/**/*",
    "website/src/**/*",
    "website/.eslintrc.js",
    "website/*.js"
  ]
}
