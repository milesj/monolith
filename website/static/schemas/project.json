{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProjectConfig",
  "description": "Docs: https://moonrepo.dev/docs/config/project",
  "type": "object",
  "properties": {
    "$schema": {
      "description": "JSON schema URI",
      "type": "string"
    },
    "dependsOn": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ProjectDependsOn"
      }
    },
    "env": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": {
        "type": "string"
      }
    },
    "fileGroups": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "language": {
      "$ref": "#/definitions/ProjectLanguage"
    },
    "platform": {
      "anyOf": [
        {
          "$ref": "#/definitions/PlatformType"
        },
        {
          "type": "null"
        }
      ]
    },
    "project": {
      "anyOf": [
        {
          "$ref": "#/definitions/ProjectMetadataConfig"
        },
        {
          "type": "null"
        }
      ]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tasks": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/TaskConfig"
      }
    },
    "toolchain": {
      "$ref": "#/definitions/ProjectToolchainConfig"
    },
    "type": {
      "$ref": "#/definitions/ProjectType"
    },
    "workspace": {
      "$ref": "#/definitions/ProjectWorkspaceConfig"
    }
  },
  "definitions": {
    "DependencyConfig": {
      "type": "object",
      "properties": {
        "id": {
          "default": "",
          "type": "string"
        },
        "scope": {
          "default": "production",
          "allOf": [
            {
              "$ref": "#/definitions/DependencyScope"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "DependencyScope": {
      "type": "string",
      "enum": [
        "development",
        "peer",
        "production"
      ]
    },
    "PlatformType": {
      "type": "string",
      "enum": [
        "deno",
        "node",
        "rust",
        "system",
        "unknown"
      ]
    },
    "ProjectDependsOn": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/definitions/DependencyConfig"
        }
      ]
    },
    "ProjectLanguage": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "bash",
            "batch",
            "go",
            "javascript",
            "php",
            "python",
            "ruby",
            "rust",
            "typescript",
            "unknown"
          ]
        },
        {
          "type": "object",
          "required": [
            "other"
          ],
          "properties": {
            "other": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "ProjectMetadataConfig": {
      "type": "object",
      "required": [
        "description"
      ],
      "properties": {
        "channel": {
          "type": [
            "string",
            "null"
          ]
        },
        "description": {
          "type": "string"
        },
        "maintainers": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "name": {
          "type": [
            "string",
            "null"
          ]
        },
        "owner": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "ProjectToolchainConfig": {
      "type": "object",
      "properties": {
        "node": {
          "anyOf": [
            {
              "$ref": "#/definitions/ProjectToolchainNodeConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "typescript": {
          "anyOf": [
            {
              "$ref": "#/definitions/ProjectToolchainTypeScriptConfig"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "ProjectToolchainNodeConfig": {
      "type": "object",
      "properties": {
        "version": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "ProjectToolchainTypeScriptConfig": {
      "type": "object",
      "properties": {
        "disabled": {
          "type": "boolean"
        },
        "routeOutDirToCache": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "syncProjectReferences": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "syncProjectReferencesToPaths": {
          "type": [
            "boolean",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "ProjectType": {
      "type": "string",
      "enum": [
        "application",
        "library",
        "tool",
        "unknown"
      ]
    },
    "ProjectWorkspaceConfig": {
      "type": "object",
      "properties": {
        "inheritedTasks": {
          "$ref": "#/definitions/ProjectWorkspaceInheritedTasksConfig"
        }
      },
      "additionalProperties": false
    },
    "ProjectWorkspaceInheritedTasksConfig": {
      "type": "object",
      "properties": {
        "exclude": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "include": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "rename": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "TaskCommandArgs": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "TaskConfig": {
      "type": "object",
      "properties": {
        "args": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskCommandArgs"
            },
            {
              "type": "null"
            }
          ]
        },
        "command": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskCommandArgs"
            },
            {
              "type": "null"
            }
          ]
        },
        "deps": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "env": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": {
            "type": "string"
          }
        },
        "inputs": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "local": {
          "type": "boolean"
        },
        "options": {
          "$ref": "#/definitions/TaskOptionsConfig"
        },
        "outputs": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "platform": {
          "$ref": "#/definitions/PlatformType"
        }
      },
      "additionalProperties": false
    },
    "TaskMergeStrategy": {
      "type": "string",
      "enum": [
        "append",
        "prepend",
        "replace"
      ]
    },
    "TaskOptionAffectedFilesConfig": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "string"
        }
      ]
    },
    "TaskOptionEnvFileConfig": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "string"
        }
      ]
    },
    "TaskOptionsConfig": {
      "type": "object",
      "properties": {
        "affectedFiles": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskOptionAffectedFilesConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "cache": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "envFile": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskOptionEnvFileConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "mergeArgs": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "mergeDeps": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "mergeEnv": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "mergeInputs": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "mergeOutputs": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "outputStyle": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskOutputStyle"
            },
            {
              "type": "null"
            }
          ]
        },
        "retryCount": {
          "type": [
            "integer",
            "null"
          ],
          "format": "uint8",
          "minimum": 0.0
        },
        "runDepsInParallel": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "runFromWorkspaceRoot": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "runInCI": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "shell": {
          "type": [
            "boolean",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "TaskOutputStyle": {
      "type": "string",
      "enum": [
        "buffer",
        "buffer-only-failure",
        "hash",
        "none",
        "stream"
      ]
    }
  }
}