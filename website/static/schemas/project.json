{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PartialProjectConfig",
  "description": "Docs: https://moonrepo.dev/docs/config/project",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "dependsOn": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ProjectDependsOn"
      }
    },
    "env": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "fileGroups": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/PortablePath"
        }
      }
    },
    "language": {
      "$ref": "#/definitions/LanguageType"
    },
    "platform": {
      "$ref": "#/definitions/PlatformType"
    },
    "project": {
      "$ref": "#/definitions/PartialProjectMetadataConfig"
    },
    "tags": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Id"
      }
    },
    "tasks": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/PartialTaskConfig"
      }
    },
    "toolchain": {
      "$ref": "#/definitions/PartialProjectToolchainConfig"
    },
    "type": {
      "$ref": "#/definitions/ProjectType"
    },
    "workspace": {
      "$ref": "#/definitions/PartialProjectWorkspaceConfig"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "DependencyScope": {
      "type": "string",
      "enum": [
        "development",
        "peer",
        "production"
      ]
    },
    "FilePath": {
      "type": "string"
    },
    "GlobPath": {
      "type": "string"
    },
    "Id": {
      "type": "string"
    },
    "LanguageType": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "bash",
            "batch",
            "go",
            "javascript",
            "php",
            "python",
            "ruby",
            "rust",
            "typescript",
            "unknown"
          ]
        },
        {
          "type": "object",
          "required": [
            "other"
          ],
          "properties": {
            "other": {
              "$ref": "#/definitions/Id"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "PartialProjectMetadataConfig": {
      "type": "object",
      "properties": {
        "channel": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "maintainers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "name": {
          "type": "string"
        },
        "owner": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "PartialProjectToolchainCommonToolConfig": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "PartialProjectToolchainConfig": {
      "type": "object",
      "properties": {
        "node": {
          "$ref": "#/definitions/PartialProjectToolchainCommonToolConfig"
        },
        "rust": {
          "$ref": "#/definitions/PartialProjectToolchainCommonToolConfig"
        },
        "typescript": {
          "$ref": "#/definitions/PartialProjectToolchainTypeScriptConfig"
        }
      },
      "additionalProperties": false
    },
    "PartialProjectToolchainTypeScriptConfig": {
      "type": "object",
      "properties": {
        "disabled": {
          "type": "boolean"
        },
        "routeOutDirToCache": {
          "type": "boolean"
        },
        "syncProjectReferences": {
          "type": "boolean"
        },
        "syncProjectReferencesToPaths": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "PartialProjectWorkspaceConfig": {
      "type": "object",
      "properties": {
        "inheritedTasks": {
          "$ref": "#/definitions/PartialProjectWorkspaceInheritedTasksConfig"
        }
      },
      "additionalProperties": false
    },
    "PartialProjectWorkspaceInheritedTasksConfig": {
      "type": "object",
      "properties": {
        "exclude": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Id"
          }
        },
        "include": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Id"
          }
        },
        "rename": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/Id"
          }
        }
      },
      "additionalProperties": false
    },
    "PartialTaskConfig": {
      "type": "object",
      "properties": {
        "args": {
          "$ref": "#/definitions/TaskCommandArgs"
        },
        "command": {
          "$ref": "#/definitions/TaskCommandArgs"
        },
        "deps": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Target"
          }
        },
        "env": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "inputs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "local": {
          "type": "boolean"
        },
        "options": {
          "$ref": "#/definitions/PartialTaskOptionsConfig"
        },
        "outputs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "platform": {
          "$ref": "#/definitions/PlatformType"
        },
        "type": {
          "$ref": "#/definitions/TaskType"
        }
      },
      "additionalProperties": false
    },
    "PartialTaskOptionsConfig": {
      "type": "object",
      "properties": {
        "affectedFiles": {
          "$ref": "#/definitions/TaskOptionAffectedFiles"
        },
        "cache": {
          "type": "boolean"
        },
        "envFile": {
          "$ref": "#/definitions/TaskOptionEnvFile"
        },
        "mergeArgs": {
          "$ref": "#/definitions/TaskMergeStrategy"
        },
        "mergeDeps": {
          "$ref": "#/definitions/TaskMergeStrategy"
        },
        "mergeEnv": {
          "$ref": "#/definitions/TaskMergeStrategy"
        },
        "mergeInputs": {
          "$ref": "#/definitions/TaskMergeStrategy"
        },
        "mergeOutputs": {
          "$ref": "#/definitions/TaskMergeStrategy"
        },
        "outputStyle": {
          "$ref": "#/definitions/TaskOutputStyle"
        },
        "persistent": {
          "type": "boolean"
        },
        "retryCount": {
          "type": "integer",
          "format": "uint8",
          "minimum": 0.0
        },
        "runDepsInParallel": {
          "type": "boolean"
        },
        "runFromWorkspaceRoot": {
          "type": "boolean"
        },
        "runInCI": {
          "type": "boolean"
        },
        "shell": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "PlatformType": {
      "type": "string",
      "enum": [
        "deno",
        "node",
        "rust",
        "system",
        "unknown"
      ]
    },
    "PortablePath": {
      "anyOf": [
        {
          "$ref": "#/definitions/FilePath"
        },
        {
          "$ref": "#/definitions/GlobPath"
        },
        {
          "$ref": "#/definitions/FilePath"
        },
        {
          "$ref": "#/definitions/GlobPath"
        }
      ]
    },
    "ProjectDependsOn": {
      "anyOf": [
        {
          "$ref": "#/definitions/Id"
        },
        {
          "type": "object",
          "required": [
            "id",
            "scope"
          ],
          "properties": {
            "id": {
              "$ref": "#/definitions/Id"
            },
            "scope": {
              "$ref": "#/definitions/DependencyScope"
            }
          }
        }
      ]
    },
    "ProjectType": {
      "type": "string",
      "enum": [
        "application",
        "library",
        "tool",
        "unknown"
      ]
    },
    "Target": {
      "type": "string"
    },
    "TaskCommandArgs": {
      "anyOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "TaskMergeStrategy": {
      "type": "string",
      "enum": [
        "append",
        "prepend",
        "replace"
      ]
    },
    "TaskOptionAffectedFiles": {
      "anyOf": [
        {
          "type": "null"
        },
        {
          "type": "null"
        },
        {
          "type": "boolean"
        }
      ]
    },
    "TaskOptionEnvFile": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "string"
        }
      ]
    },
    "TaskOutputStyle": {
      "type": "string",
      "enum": [
        "buffer",
        "buffer-only-failure",
        "hash",
        "none",
        "stream"
      ]
    },
    "TaskType": {
      "type": "string",
      "enum": [
        "build",
        "run",
        "test"
      ]
    }
  }
}