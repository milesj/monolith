{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProjectConfig",
  "description": "Docs: https://moonrepo.dev/docs/config/project",
  "type": "object",
  "properties": {
    "dependsOn": {
      "default": [],
      "type": "array",
      "items": {
        "$ref": "#/definitions/ProjectDependsOn"
      }
    },
    "fileGroups": {
      "default": {},
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "language": {
      "default": "unknown",
      "allOf": [
        {
          "$ref": "#/definitions/ProjectLanguage"
        }
      ]
    },
    "project": {
      "default": null,
      "anyOf": [
        {
          "$ref": "#/definitions/ProjectMetadataConfig"
        },
        {
          "type": "null"
        }
      ]
    },
    "tasks": {
      "default": {},
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/TaskConfig"
      }
    },
    "toolchain": {
      "default": {
        "node": null,
        "typescript": true
      },
      "allOf": [
        {
          "$ref": "#/definitions/ProjectToolchainConfig"
        }
      ]
    },
    "type": {
      "default": "unknown",
      "allOf": [
        {
          "$ref": "#/definitions/ProjectType"
        }
      ]
    },
    "workspace": {
      "default": {
        "inheritedTasks": {
          "exclude": null,
          "include": null,
          "rename": null
        }
      },
      "allOf": [
        {
          "$ref": "#/definitions/ProjectWorkspaceConfig"
        }
      ]
    }
  },
  "definitions": {
    "DependencyConfig": {
      "type": "object",
      "properties": {
        "id": {
          "default": "",
          "type": "string"
        },
        "scope": {
          "default": "production",
          "allOf": [
            {
              "$ref": "#/definitions/DependencyScope"
            }
          ]
        }
      }
    },
    "DependencyScope": {
      "type": "string",
      "enum": [
        "development",
        "peer",
        "production"
      ]
    },
    "PlatformType": {
      "type": "string",
      "enum": [
        "node",
        "system",
        "unknown"
      ]
    },
    "ProjectDependsOn": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/definitions/DependencyConfig"
        }
      ]
    },
    "ProjectLanguage": {
      "type": "string",
      "enum": [
        "bash",
        "batch",
        "javascript",
        "typescript",
        "unknown"
      ]
    },
    "ProjectMetadataConfig": {
      "type": "object",
      "required": [
        "channel",
        "description",
        "maintainers",
        "name",
        "owner"
      ],
      "properties": {
        "channel": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "maintainers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "name": {
          "type": "string"
        },
        "owner": {
          "type": "string"
        }
      }
    },
    "ProjectToolchainConfig": {
      "type": "object",
      "properties": {
        "node": {
          "default": null,
          "anyOf": [
            {
              "$ref": "#/definitions/ProjectToolchainNodeConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "typescript": {
          "default": true,
          "type": "boolean"
        }
      }
    },
    "ProjectToolchainNodeConfig": {
      "type": "object",
      "properties": {
        "version": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "ProjectType": {
      "type": "string",
      "enum": [
        "application",
        "library",
        "tool",
        "unknown"
      ]
    },
    "ProjectWorkspaceConfig": {
      "type": "object",
      "properties": {
        "inheritedTasks": {
          "default": {
            "exclude": null,
            "include": null,
            "rename": null
          },
          "allOf": [
            {
              "$ref": "#/definitions/ProjectWorkspaceInheritedTasksConfig"
            }
          ]
        }
      }
    },
    "ProjectWorkspaceInheritedTasksConfig": {
      "type": "object",
      "properties": {
        "exclude": {
          "default": null,
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "include": {
          "default": null,
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "rename": {
          "default": null,
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "TaskCommandArgs": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "TaskConfig": {
      "type": "object",
      "properties": {
        "args": {
          "default": null,
          "anyOf": [
            {
              "$ref": "#/definitions/TaskCommandArgs"
            },
            {
              "type": "null"
            }
          ]
        },
        "command": {
          "default": null,
          "anyOf": [
            {
              "$ref": "#/definitions/TaskCommandArgs"
            },
            {
              "type": "null"
            }
          ]
        },
        "deps": {
          "default": null,
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "env": {
          "default": null,
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": {
            "type": "string"
          }
        },
        "inputs": {
          "default": null,
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "local": {
          "default": false,
          "type": "boolean"
        },
        "options": {
          "default": {
            "affectedFiles": null,
            "cache": null,
            "envFile": null,
            "mergeArgs": null,
            "mergeDeps": null,
            "mergeEnv": null,
            "mergeInputs": null,
            "mergeOutputs": null,
            "outputStyle": null,
            "retryCount": null,
            "runDepsInParallel": null,
            "runInCI": null,
            "runFromWorkspaceRoot": null
          },
          "allOf": [
            {
              "$ref": "#/definitions/TaskOptionsConfig"
            }
          ]
        },
        "outputs": {
          "default": null,
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "platform": {
          "default": "unknown",
          "allOf": [
            {
              "$ref": "#/definitions/PlatformType"
            }
          ]
        }
      }
    },
    "TaskMergeStrategy": {
      "type": "string",
      "enum": [
        "append",
        "prepend",
        "replace"
      ]
    },
    "TaskOptionEnvFile": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "string"
        }
      ]
    },
    "TaskOptionsConfig": {
      "type": "object",
      "properties": {
        "affectedFiles": {
          "default": null,
          "type": [
            "boolean",
            "null"
          ]
        },
        "cache": {
          "default": null,
          "type": [
            "boolean",
            "null"
          ]
        },
        "envFile": {
          "default": null,
          "anyOf": [
            {
              "$ref": "#/definitions/TaskOptionEnvFile"
            },
            {
              "type": "null"
            }
          ]
        },
        "mergeArgs": {
          "default": null,
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "mergeDeps": {
          "default": null,
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "mergeEnv": {
          "default": null,
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "mergeInputs": {
          "default": null,
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "mergeOutputs": {
          "default": null,
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "outputStyle": {
          "default": null,
          "anyOf": [
            {
              "$ref": "#/definitions/TaskOutputStyle"
            },
            {
              "type": "null"
            }
          ]
        },
        "retryCount": {
          "default": null,
          "type": [
            "integer",
            "null"
          ],
          "format": "uint8",
          "minimum": 0.0
        },
        "runDepsInParallel": {
          "default": null,
          "type": [
            "boolean",
            "null"
          ]
        },
        "runFromWorkspaceRoot": {
          "default": null,
          "type": [
            "boolean",
            "null"
          ]
        },
        "runInCI": {
          "default": null,
          "type": [
            "boolean",
            "null"
          ]
        }
      }
    },
    "TaskOutputStyle": {
      "type": "string",
      "enum": [
        "buffer",
        "buffer-only-failure",
        "hash",
        "none",
        "stream"
      ]
    }
  }
}