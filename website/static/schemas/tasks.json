{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GlobalProjectConfig",
  "description": "Docs: https://moonrepo.dev/docs/config/tasks",
  "type": "object",
  "properties": {
    "extends": {
      "type": [
        "string",
        "null"
      ]
    },
    "fileGroups": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "tasks": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/TaskConfig"
      }
    }
  },
  "definitions": {
    "PlatformType": {
      "type": "string",
      "enum": [
        "node",
        "system",
        "unknown"
      ]
    },
    "TaskCommandArgs": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "TaskConfig": {
      "type": "object",
      "properties": {
        "args": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskCommandArgs"
            },
            {
              "type": "null"
            }
          ]
        },
        "command": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskCommandArgs"
            },
            {
              "type": "null"
            }
          ]
        },
        "deps": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "env": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": {
            "type": "string"
          }
        },
        "inputs": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "local": {
          "type": "boolean"
        },
        "options": {
          "$ref": "#/definitions/TaskOptionsConfig"
        },
        "outputs": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "platform": {
          "$ref": "#/definitions/PlatformType"
        }
      }
    },
    "TaskMergeStrategy": {
      "type": "string",
      "enum": [
        "append",
        "prepend",
        "replace"
      ]
    },
    "TaskOptionAffectedFilesConfig": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "string"
        }
      ]
    },
    "TaskOptionEnvFileConfig": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "string"
        }
      ]
    },
    "TaskOptionsConfig": {
      "type": "object",
      "properties": {
        "affectedFiles": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskOptionAffectedFilesConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "cache": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "envFile": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskOptionEnvFileConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "mergeArgs": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "mergeDeps": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "mergeEnv": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "mergeInputs": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "mergeOutputs": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "outputStyle": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskOutputStyle"
            },
            {
              "type": "null"
            }
          ]
        },
        "retryCount": {
          "type": [
            "integer",
            "null"
          ],
          "format": "uint8",
          "minimum": 0.0
        },
        "runDepsInParallel": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "runFromWorkspaceRoot": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "runInCI": {
          "type": [
            "boolean",
            "null"
          ]
        }
      }
    },
    "TaskOutputStyle": {
      "type": "string",
      "enum": [
        "buffer",
        "buffer-only-failure",
        "hash",
        "none",
        "stream"
      ]
    }
  }
}