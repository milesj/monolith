          "oneOf": [
            {
              "$ref": "#/definitions/TaskType"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "PartialTaskOptionsConfig": {
      "title": "PartialTaskOptionsConfig",
      "type": "object",
      "properties": {
        "affectedFiles": {
          "oneOf": [
