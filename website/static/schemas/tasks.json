{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PartialInheritedTasksConfig",
  "description": "Docs: https://moonrepo.dev/docs/config/tasks",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "extends": {
      "type": "string"
    },
    "fileGroups": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/PortablePath"
        }
      }
    },
    "implicitDeps": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Target"
      }
    },
    "implicitInputs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tasks": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/PartialTaskConfig"
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "FilePath": {
      "type": "string"
    },
    "GlobPath": {
      "type": "string"
    },
    "PartialTaskConfig": {
      "type": "object",
      "properties": {
        "args": {
          "$ref": "#/definitions/TaskCommandArgs"
        },
        "command": {
          "$ref": "#/definitions/TaskCommandArgs"
        },
        "deps": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Target"
          }
        },
        "env": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "inputs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "local": {
          "type": "boolean"
        },
        "options": {
          "$ref": "#/definitions/PartialTaskOptionsConfig"
        },
        "outputs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "platform": {
          "$ref": "#/definitions/PlatformType"
        },
        "type": {
          "$ref": "#/definitions/TaskType"
        }
      },
      "additionalProperties": false
    },
    "PartialTaskOptionsConfig": {
      "type": "object",
      "properties": {
        "affectedFiles": {
          "$ref": "#/definitions/TaskOptionAffectedFiles"
        },
        "cache": {
          "type": "boolean"
        },
        "envFile": {
          "$ref": "#/definitions/TaskOptionEnvFile"
        },
        "mergeArgs": {
          "$ref": "#/definitions/TaskMergeStrategy"
        },
        "mergeDeps": {
          "$ref": "#/definitions/TaskMergeStrategy"
        },
        "mergeEnv": {
          "$ref": "#/definitions/TaskMergeStrategy"
        },
        "mergeInputs": {
          "$ref": "#/definitions/TaskMergeStrategy"
        },
        "mergeOutputs": {
          "$ref": "#/definitions/TaskMergeStrategy"
        },
        "outputStyle": {
          "$ref": "#/definitions/TaskOutputStyle"
        },
        "persistent": {
          "type": "boolean"
        },
        "retryCount": {
          "type": "integer",
          "format": "uint8",
          "minimum": 0.0
        },
        "runDepsInParallel": {
          "type": "boolean"
        },
        "runFromWorkspaceRoot": {
          "type": "boolean"
        },
        "runInCI": {
          "type": "boolean"
        },
        "shell": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "PlatformType": {
      "type": "string",
      "enum": [
        "deno",
        "node",
        "rust",
        "system",
        "unknown"
      ]
    },
    "PortablePath": {
      "anyOf": [
        {
          "$ref": "#/definitions/FilePath"
        },
        {
          "$ref": "#/definitions/GlobPath"
        },
        {
          "$ref": "#/definitions/FilePath"
        },
        {
          "$ref": "#/definitions/GlobPath"
        }
      ]
    },
    "Target": {
      "type": "string"
    },
    "TaskCommandArgs": {
      "anyOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "TaskMergeStrategy": {
      "type": "string",
      "enum": [
        "append",
        "prepend",
        "replace"
      ]
    },
    "TaskOptionAffectedFiles": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "args",
            "env"
          ]
        },
        {
          "type": "boolean"
        }
      ]
    },
    "TaskOptionEnvFile": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "type": "string"
        }
      ]
    },
    "TaskOutputStyle": {
      "type": "string",
      "enum": [
        "buffer",
        "buffer-only-failure",
        "hash",
        "none",
        "stream"
      ]
    },
    "TaskType": {
      "type": "string",
      "enum": [
        "build",
        "run",
        "test"
      ]
    }
  }
}