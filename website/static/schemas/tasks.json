      "type": "string",
      "enum": [
        "deno",
        "node",
        "rust",
        "system",
        "unknown"
      ]
    },
    "TaskCommandArgs": {
      "anyOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "TaskMergeStrategy": {
      "type": "string",
      "enum": [
        "append",
        "prepend",
        "replace"
      ]
    },
    "TaskOutputStyle": {
      "type": "string",
      "enum": [
        "buffer",
        "buffer-only-failure",
        "hash",
        "none",
        "stream"
      ]
    },
    "TaskType": {
      "type": "string",
      "enum": [
        "build",
        "run",
        "test"
      ]
    }
