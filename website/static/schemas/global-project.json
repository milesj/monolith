{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GlobalProjectConfig",
  "description": "Docs: https://moonrepo.dev/docs/config/global-project",
  "type": "object",
  "properties": {
    "extends": {
      "type": [
        "string",
        "null"
      ]
    },
    "fileGroups": {
      "default": {},
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "tasks": {
      "default": {},
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/TaskConfig"
      }
    }
  },
  "definitions": {
    "TaskConfig": {
      "type": "object",
      "properties": {
        "args": {
          "title": "ArgsField",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "command": {
          "type": [
            "string",
            "null"
          ]
        },
        "deps": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "env": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": {
            "type": "string"
          }
        },
        "inputs": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "options": {
          "$ref": "#/definitions/TaskOptionsConfig"
        },
        "outputs": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "type": {
          "$ref": "#/definitions/TaskType"
        }
      }
    },
    "TaskMergeStrategy": {
      "type": "string",
      "enum": [
        "append",
        "prepend",
        "replace"
      ]
    },
    "TaskOptionsConfig": {
      "type": "object",
      "properties": {
        "mergeArgs": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "mergeDeps": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "mergeEnv": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "mergeInputs": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "mergeOutputs": {
          "anyOf": [
            {
              "$ref": "#/definitions/TaskMergeStrategy"
            },
            {
              "type": "null"
            }
          ]
        },
        "retryCount": {
          "type": [
            "integer",
            "null"
          ],
          "format": "uint8",
          "minimum": 0.0
        },
        "runFromWorkspaceRoot": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "runInCI": {
          "type": [
            "boolean",
            "null"
          ]
        }
      }
    },
    "TaskType": {
      "type": "string",
      "enum": [
        "node",
        "system"
      ]
    }
  }
}