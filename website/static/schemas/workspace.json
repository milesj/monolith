{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PartialWorkspaceConfig",
  "description": "Docs: https://moonrepo.dev/docs/config/workspace",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "constraints": {
      "$ref": "#/definitions/PartialConstraintsConfig"
    },
    "extends": {
      "type": "string"
    },
    "generator": {
      "$ref": "#/definitions/PartialGeneratorConfig"
    },
    "hasher": {
      "$ref": "#/definitions/PartialHasherConfig"
    },
    "notifier": {
      "$ref": "#/definitions/PartialNotifierConfig"
    },
    "projects": {
      "$ref": "#/definitions/WorkspaceProjects"
    },
    "runner": {
      "$ref": "#/definitions/PartialRunnerConfig"
    },
    "telemetry": {
      "type": "boolean"
    },
    "vcs": {
      "$ref": "#/definitions/PartialVcsConfig"
    },
    "versionConstraint": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "FilePath": {
      "type": "string"
    },
    "HasherOptimization": {
      "type": "string",
      "enum": [
        "accuracy",
        "performance"
      ]
    },
    "HasherWalkStrategy": {
      "type": "string",
      "enum": [
        "glob",
        "vcs"
      ]
    },
    "Id": {
      "type": "string"
    },
    "PartialConstraintsConfig": {
      "type": "object",
      "properties": {
        "enforceProjectTypeRelationships": {
          "type": "boolean"
        },
        "tagRelationships": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/Id"
            }
          }
        }
      },
      "additionalProperties": false
    },
    "PartialGeneratorConfig": {
      "type": "object",
      "properties": {
        "templates": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/FilePath"
          }
        }
      },
      "additionalProperties": false
    },
    "PartialHasherConfig": {
      "type": "object",
      "properties": {
        "batchSize": {
          "type": "integer",
          "format": "uint16",
          "minimum": 0.0
        },
        "optimization": {
          "$ref": "#/definitions/HasherOptimization"
        },
        "walkStrategy": {
          "$ref": "#/definitions/HasherWalkStrategy"
        },
        "warnOnMissingInputs": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "PartialNotifierConfig": {
      "type": "object",
      "properties": {
        "webhookUrl": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "PartialRunnerConfig": {
      "type": "object",
      "properties": {
        "archivableTargets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Target"
          }
        },
        "cacheLifetime": {
          "type": "string"
        },
        "inheritColorsForPipedTasks": {
          "type": "boolean"
        },
        "logRunningCommand": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "PartialVcsConfig": {
      "type": "object",
      "properties": {
        "defaultBranch": {
          "type": "string"
        },
        "manager": {
          "$ref": "#/definitions/VcsManager"
        },
        "remoteCandidates": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "Target": {
      "type": "object",
      "required": [
        "id",
        "scope",
        "task_id"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "scope": {
          "$ref": "#/definitions/TargetScope"
        },
        "scope_id": {
          "$ref": "#/definitions/Id"
        },
        "task_id": {
          "$ref": "#/definitions/Id"
        }
      }
    },
    "TargetScope": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "All",
            "Deps",
            "OwnSelf"
          ]
        },
        {
          "type": "object",
          "required": [
            "Project"
          ],
          "properties": {
            "Project": {
              "$ref": "#/definitions/Id"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "Tag"
          ],
          "properties": {
            "Tag": {
              "$ref": "#/definitions/Id"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "VcsManager": {
      "type": "string",
      "enum": [
        "git",
        "svn"
      ]
    },
    "WorkspaceProjects": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "globs",
            "sources"
          ],
          "properties": {
            "globs": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "sources": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          }
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      ]
    }
  }
}