{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WorkspaceConfig",
  "description": "Docs: https://moonrepo.dev/docs/config/workspace",
  "type": "object",
  "properties": {
    "actionRunner": {
      "default": {
        "inheritColorsForPipedTasks": true
      },
      "allOf": [
        {
          "$ref": "#/definitions/ActionRunnerConfig"
        }
      ]
    },
    "extends": {
      "type": [
        "string",
        "null"
      ]
    },
    "node": {
      "default": {
        "addEnginesConstraint": true,
        "dedupeOnLockfileChange": true,
        "npm": {
          "version": "inherit"
        },
        "packageManager": "npm",
        "pnpm": null,
        "syncProjectWorkspaceDependencies": true,
        "syncVersionManagerConfig": null,
        "version": "16.15.0",
        "yarn": null
      },
      "allOf": [
        {
          "$ref": "#/definitions/NodeConfig"
        }
      ]
    },
    "projects": {
      "title": "ProjectsField",
      "default": {},
      "anyOf": [
        {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "typescript": {
      "default": {
        "projectConfigFileName": "tsconfig.json",
        "rootConfigFileName": "tsconfig.json",
        "syncProjectReferences": true
      },
      "allOf": [
        {
          "$ref": "#/definitions/TypeScriptConfig"
        }
      ]
    },
    "vcs": {
      "default": {
        "manager": "git",
        "defaultBranch": "master"
      },
      "allOf": [
        {
          "$ref": "#/definitions/VcsConfig"
        }
      ]
    }
  },
  "definitions": {
    "ActionRunnerConfig": {
      "type": "object",
      "properties": {
        "inheritColorsForPipedTasks": {
          "default": true,
          "type": "boolean"
        }
      }
    },
    "NodeConfig": {
      "type": "object",
      "properties": {
        "addEnginesConstraint": {
          "default": true,
          "type": "boolean"
        },
        "dedupeOnLockfileChange": {
          "default": true,
          "type": "boolean"
        },
        "npm": {
          "default": {
            "version": "inherit"
          },
          "allOf": [
            {
              "$ref": "#/definitions/NpmConfig"
            }
          ]
        },
        "packageManager": {
          "default": "npm",
          "allOf": [
            {
              "$ref": "#/definitions/PackageManager"
            }
          ]
        },
        "pnpm": {
          "anyOf": [
            {
              "$ref": "#/definitions/PnpmConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "syncProjectWorkspaceDependencies": {
          "default": true,
          "type": "boolean"
        },
        "syncVersionManagerConfig": {
          "anyOf": [
            {
              "$ref": "#/definitions/VersionManager"
            },
            {
              "type": "null"
            }
          ]
        },
        "version": {
          "default": "16.15.0",
          "type": "string"
        },
        "yarn": {
          "anyOf": [
            {
              "$ref": "#/definitions/YarnConfig"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "NpmConfig": {
      "type": "object",
      "properties": {
        "version": {
          "default": "inherit",
          "type": "string"
        }
      }
    },
    "PackageManager": {
      "type": "string",
      "enum": [
        "npm",
        "pnpm",
        "yarn"
      ]
    },
    "PnpmConfig": {
      "type": "object",
      "properties": {
        "version": {
          "default": "7.1.5",
          "type": "string"
        }
      }
    },
    "TypeScriptConfig": {
      "type": "object",
      "properties": {
        "projectConfigFileName": {
          "default": "tsconfig.json",
          "type": "string"
        },
        "rootConfigFileName": {
          "default": "tsconfig.json",
          "type": "string"
        },
        "syncProjectReferences": {
          "default": true,
          "type": "boolean"
        }
      }
    },
    "VcsConfig": {
      "type": "object",
      "properties": {
        "defaultBranch": {
          "default": "master",
          "type": "string"
        },
        "manager": {
          "default": "git",
          "allOf": [
            {
              "$ref": "#/definitions/VcsManager"
            }
          ]
        }
      }
    },
    "VcsManager": {
      "type": "string",
      "enum": [
        "git",
        "svn"
      ]
    },
    "VersionManager": {
      "type": "string",
      "enum": [
        "nodenv",
        "nvm"
      ]
    },
    "YarnConfig": {
      "type": "object",
      "properties": {
        "version": {
          "default": "3.2.1",
          "type": "string"
        }
      }
    }
  }
}