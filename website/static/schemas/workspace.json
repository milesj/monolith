{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WorkspaceConfig",
  "description": "Docs: https://moonrepo.dev/docs/config/workspace",
  "type": "object",
  "properties": {
    "$schema": {
      "description": "JSON schema URI",
      "type": "string"
    },
    "extends": {
      "type": [
        "string",
        "null"
      ]
    },
    "generator": {
      "$ref": "#/definitions/GeneratorConfig"
    },
    "hasher": {
      "$ref": "#/definitions/HasherConfig"
    },
    "notifier": {
      "$ref": "#/definitions/NotifierConfig"
    },
    "projects": {
      "$ref": "#/definitions/WorkspaceProjects"
    },
    "runner": {
      "$ref": "#/definitions/RunnerConfig"
    },
    "vcs": {
      "$ref": "#/definitions/VcsConfig"
    },
    "versionConstraint": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "definitions": {
    "GeneratorConfig": {
      "type": "object",
      "properties": {
        "templates": {
          "default": [
            "./templates"
          ],
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "HasherConfig": {
      "type": "object",
      "properties": {
        "optimization": {
          "$ref": "#/definitions/HasherOptimization"
        },
        "walkStrategy": {
          "$ref": "#/definitions/HasherWalkStrategy"
        },
        "warnOnMissingInputs": {
          "type": "boolean"
        }
      }
    },
    "HasherOptimization": {
      "type": "string",
      "enum": [
        "accuracy",
        "performance"
      ]
    },
    "HasherWalkStrategy": {
      "type": "string",
      "enum": [
        "glob",
        "vcs"
      ]
    },
    "NotifierConfig": {
      "type": "object",
      "properties": {
        "webhookUrl": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "RunnerConfig": {
      "type": "object",
      "properties": {
        "archivableTargets": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cacheLifetime": {
          "default": "7 days",
          "type": "string"
        },
        "inheritColorsForPipedTasks": {
          "type": "boolean"
        },
        "logRunningCommand": {
          "type": "boolean"
        }
      }
    },
    "VcsConfig": {
      "type": "object",
      "properties": {
        "defaultBranch": {
          "default": "master",
          "type": "string"
        },
        "manager": {
          "$ref": "#/definitions/VcsManager"
        },
        "remoteCandidates": {
          "default": [
            "origin",
            "upstream"
          ],
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "VcsManager": {
      "type": "string",
      "enum": [
        "git",
        "svn"
      ]
    },
    "WorkspaceProjects": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "globs",
            "sources"
          ],
          "properties": {
            "globs": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "sources": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          }
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      ]
    }
  }
}