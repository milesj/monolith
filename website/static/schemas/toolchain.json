{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PartialToolchainConfig",
  "description": "Docs: https://moonrepo.dev/docs/config/toolchain",
  "type": "object",
  "properties": {
    "$schema": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "deno": {
      "anyOf": [
        {
          "$ref": "#/definitions/DenoConfig"
        },
        {
          "type": "null"
        }
      ]
    },
    "extends": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "node": {
      "anyOf": [
        {
          "$ref": "#/definitions/NodeConfig"
        },
        {
          "type": "null"
        }
      ]
    },
    "rust": {
      "anyOf": [
        {
          "$ref": "#/definitions/RustConfig"
        },
        {
          "type": "null"
        }
      ]
    },
    "typescript": {
      "anyOf": [
        {
          "$ref": "#/definitions/TypeScriptConfig"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "additionalProperties": false,
  "definitions": {
    "DenoConfig": {
      "title": "DenoConfig",
      "description": "Docs: https://moonrepo.dev/docs/config/toolchain#deno",
      "type": "object",
      "required": [
        "depsFile",
        "lockfile"
      ],
      "properties": {
        "depsFile": {
          "type": "string"
        },
        "lockfile": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "NodeConfig": {
      "title": "NodeConfig",
      "description": "Docs: https://moonrepo.dev/docs/config/toolchain#node",
      "type": "object",
      "required": [
        "addEnginesConstraint",
        "aliasPackageNames",
        "binExecArgs",
        "dedupeOnLockfileChange",
        "dependencyVersionFormat",
        "inferTasksFromScripts",
        "npm",
        "packageManager",
        "pnpm",
        "syncProjectWorkspaceDependencies",
        "syncVersionManagerConfig",
        "version",
        "yarn"
      ],
      "properties": {
        "addEnginesConstraint": {
          "type": "boolean"
        },
        "aliasPackageNames": {
          "deprecated": true,
          "allOf": [
            {
              "$ref": "#/definitions/NodeProjectAliasFormat"
            }
          ]
        },
        "binExecArgs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "dedupeOnLockfileChange": {
          "type": "boolean"
        },
        "dependencyVersionFormat": {
          "allOf": [
            {
              "$ref": "#/definitions/NodeVersionFormat"
            }
          ]
        },
        "inferTasksFromScripts": {
          "type": "boolean"
        },
        "npm": {
          "allOf": [
            {
              "$ref": "#/definitions/PartialNpmConfig"
            }
          ]
        },
        "packageManager": {
          "allOf": [
            {
              "$ref": "#/definitions/NodePackageManager"
            }
          ]
        },
        "pnpm": {
          "anyOf": [
            {
              "$ref": "#/definitions/PnpmConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "syncProjectWorkspaceDependencies": {
          "type": "boolean"
        },
        "syncVersionManagerConfig": {
          "anyOf": [
            {
              "$ref": "#/definitions/NodeVersionManager"
            },
            {
              "type": "null"
            }
          ]
        },
        "version": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "yarn": {
          "anyOf": [
            {
              "$ref": "#/definitions/YarnConfig"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "NodePackageManager": {
      "type": "string",
      "enum": [
        "npm",
        "pnpm",
        "yarn"
      ]
    },
    "NodeProjectAliasFormat": {
      "type": "string",
      "enum": [
        "name-and-scope",
        "name-only"
      ]
    },
    "NodeVersionFormat": {
      "type": "string",
      "enum": [
        "file",
        "link",
        "star",
        "version",
        "version-caret",
        "version-tilde",
        "workspace",
        "workspace-caret",
        "workspace-tilde"
      ]
    },
    "NodeVersionManager": {
      "type": "string",
      "enum": [
        "nodenv",
        "nvm"
      ]
    },
    "PartialNpmConfig": {
      "title": "PartialNpmConfig",
      "type": "object",
      "properties": {
        "version": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "PnpmConfig": {
      "title": "PnpmConfig",
      "type": "object",
      "required": [
        "version"
      ],
      "properties": {
        "version": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "RustConfig": {
      "title": "RustConfig",
      "description": "Docs: https://moonrepo.dev/docs/config/toolchain#rust",
      "type": "object",
      "required": [
        "bins",
        "syncToolchainConfig",
        "version"
      ],
      "properties": {
        "bins": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "syncToolchainConfig": {
          "type": "boolean"
        },
        "version": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "TypeScriptConfig": {
      "title": "TypeScriptConfig",
      "description": "Docs: https://moonrepo.dev/docs/config/toolchain#typescript",
      "type": "object",
      "required": [
        "createMissingConfig",
        "projectConfigFileName",
        "rootConfigFileName",
        "rootOptionsConfigFileName",
        "routeOutDirToCache",
        "syncProjectReferences",
        "syncProjectReferencesToPaths"
      ],
      "properties": {
        "createMissingConfig": {
          "type": "boolean"
        },
        "projectConfigFileName": {
          "type": "string"
        },
        "rootConfigFileName": {
          "type": "string"
        },
        "rootOptionsConfigFileName": {
          "type": "string"
        },
        "routeOutDirToCache": {
          "type": "boolean"
        },
        "syncProjectReferences": {
          "type": "boolean"
        },
        "syncProjectReferencesToPaths": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "YarnConfig": {
      "title": "YarnConfig",
      "type": "object",
      "required": [
        "plugins",
        "version"
      ],
      "properties": {
        "plugins": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "version": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    }
  }
}
