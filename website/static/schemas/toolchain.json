{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PartialToolchainConfig",
  "description": "Docs: https://moonrepo.dev/docs/config/toolchain",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "deno": {
      "$ref": "#/definitions/PartialDenoConfig"
    },
    "extends": {
      "type": "string"
    },
    "node": {
      "$ref": "#/definitions/PartialNodeConfig"
    },
    "rust": {
      "$ref": "#/definitions/PartialRustConfig"
    },
    "typescript": {
      "$ref": "#/definitions/PartialTypeScriptConfig"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "NodePackageManager": {
      "type": "string",
      "enum": [
        "npm",
        "pnpm",
        "yarn"
      ]
    },
    "NodeProjectAliasFormat": {
      "type": "string",
      "enum": [
        "name-and-scope",
        "name-only"
      ]
    },
    "NodeVersionFormat": {
      "type": "string",
      "enum": [
        "file",
        "link",
        "star",
        "version",
        "version-caret",
        "version-tilde",
        "workspace",
        "workspace-caret",
        "workspace-tilde"
      ]
    },
    "NodeVersionManager": {
      "type": "string",
      "enum": [
        "nodenv",
        "nvm"
      ]
    },
    "PartialDenoConfig": {
      "description": "Docs: https://moonrepo.dev/docs/config/toolchain#deno",
      "type": "object",
      "properties": {
        "depsFile": {
          "type": "string"
        },
        "lockfile": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "PartialNodeConfig": {
      "description": "Docs: https://moonrepo.dev/docs/config/toolchain#node",
      "type": "object",
      "properties": {
        "addEnginesConstraint": {
          "type": "boolean"
        },
        "aliasPackageNames": {
          "$ref": "#/definitions/NodeProjectAliasFormat"
        },
        "binExecArgs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "dedupeOnLockfileChange": {
          "type": "boolean"
        },
        "dependencyVersionFormat": {
          "$ref": "#/definitions/NodeVersionFormat"
        },
        "inferTasksFromScripts": {
          "type": "boolean"
        },
        "npm": {
          "$ref": "#/definitions/PartialNpmConfig"
        },
        "packageManager": {
          "$ref": "#/definitions/NodePackageManager"
        },
        "pnpm": {
          "$ref": "#/definitions/PartialPnpmConfig"
        },
        "syncProjectWorkspaceDependencies": {
          "type": "boolean"
        },
        "syncVersionManagerConfig": {
          "$ref": "#/definitions/NodeVersionManager"
        },
        "version": {
          "type": "string"
        },
        "yarn": {
          "$ref": "#/definitions/PartialYarnConfig"
        }
      },
      "additionalProperties": false
    },
    "PartialNpmConfig": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "PartialPnpmConfig": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "PartialRustConfig": {
      "description": "Docs: https://moonrepo.dev/docs/config/toolchain#rust",
      "type": "object",
      "properties": {
        "bins": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "syncToolchainConfig": {
          "type": "boolean"
        },
        "version": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "PartialTypeScriptConfig": {
      "description": "Docs: https://moonrepo.dev/docs/config/toolchain#typescript",
      "type": "object",
      "properties": {
        "createMissingConfig": {
          "type": "boolean"
        },
        "projectConfigFileName": {
          "type": "string"
        },
        "rootConfigFileName": {
          "type": "string"
        },
        "rootOptionsConfigFileName": {
          "type": "string"
        },
        "routeOutDirToCache": {
          "type": "boolean"
        },
        "syncProjectReferences": {
          "type": "boolean"
        },
        "syncProjectReferencesToPaths": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "PartialYarnConfig": {
      "type": "object",
      "properties": {
        "plugins": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "version": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}