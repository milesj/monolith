{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PartialTemplateConfig",
  "description": "Configures a template and its files to be scaffolded. Docs: https://moonrepo.dev/docs/config/template",
  "type": "object",
  "properties": {
    "$schema": {
      "default": "https://moonrepo.dev/schemas/template.json",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "description": {
      "description": "A description on what the template scaffolds.",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "destination": {
      "description": "A pre-populated destination to scaffold to, relative from the workspace root.",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "extends": {
      "description": "Extends one or many other templates.",
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "title": {
      "description": "A human-readable title for the template.",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "variables": {
      "description": "A mapping of variables that'll be interpolated within each template file. Variables can also be populated by passing command line arguments.",
      "anyOf": [
        {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/PartialTemplateVariable"
          },
          "propertyNames": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "additionalProperties": false,
  "definitions": {
    "PartialTemplateVariable": {
      "title": "PartialTemplateVariable",
      "description": "Each type of template variable.",
      "anyOf": [
        {
          "$ref": "#/definitions/PartialTemplateVariableBoolSetting"
        },
        {
          "$ref": "#/definitions/PartialTemplateVariableEnumSetting"
        },
        {
          "$ref": "#/definitions/PartialTemplateVariableNumberSetting"
        },
        {
          "$ref": "#/definitions/PartialTemplateVariableStringSetting"
        }
      ]
    },
    "PartialTemplateVariableBoolSetting": {
      "title": "PartialTemplateVariableBoolSetting",
      "type": "object",
      "properties": {
        "default": {
          "description": "The default value of the variable if none was provided.",
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "prompt": {
          "description": "Prompt the user for a value when the generate is running.",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "required": {
          "description": "Marks the variable as required, and will not accept an empty value.",
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "type": {
          "anyOf": [
            {
              "const": "boolean"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "PartialTemplateVariableEnumSetting": {
      "title": "PartialTemplateVariableEnumSetting",
      "type": "object",
      "properties": {
        "default": {
          "description": "The default value of the variable if none was provided.",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "multiple": {
          "description": "Allows multiple values to be selected.",
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "prompt": {
          "description": "Prompt the user for a value when the generate is running.",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "type": {
          "anyOf": [
            {
              "const": "enum"
            },
            {
              "type": "null"
            }
          ]
        },
        "values": {
          "description": "List of acceptable values for this variable.",
          "anyOf": [
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/PartialTemplateVariableEnumValue"
              }
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "PartialTemplateVariableEnumValue": {
      "title": "PartialTemplateVariableEnumValue",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/definitions/PartialTemplateVariableEnumValueConfig"
        }
      ]
    },
    "PartialTemplateVariableEnumValueConfig": {
      "title": "PartialTemplateVariableEnumValueConfig",
      "type": "object",
      "properties": {
        "label": {
          "description": "A human-readable label for the value.",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "value": {
          "description": "The literal enumerable value.",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "PartialTemplateVariableNumberSetting": {
      "title": "PartialTemplateVariableNumberSetting",
      "type": "object",
      "properties": {
        "default": {
          "description": "The default value of the variable if none was provided.",
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ]
        },
        "prompt": {
          "description": "Prompt the user for a value when the generate is running.",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "required": {
          "description": "Marks the variable as required, and will not accept an empty value.",
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "type": {
          "anyOf": [
            {
              "const": "number"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "PartialTemplateVariableStringSetting": {
      "title": "PartialTemplateVariableStringSetting",
      "type": "object",
      "properties": {
        "default": {
          "description": "The default value of the variable if none was provided.",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "prompt": {
          "description": "Prompt the user for a value when the generate is running.",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "required": {
          "description": "Marks the variable as required, and will not accept an empty value.",
          "anyOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "type": {
          "anyOf": [
            {
              "const": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    }
  }
}
