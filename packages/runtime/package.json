{
  "name": "@moonrepo/runtime",
  "version": "0.0.2",
  "type": "module",
  "description": "Action runner and runtime utilities.",
  "keywords": [
    "moon",
    "repo",
    "task",
    "runner",
    "runtime"
  ],
  "author": "Miles Johnson",
  "license": "MIT",
  "main": "./mjs/index.mjs",
  "module": "./mjs/index.mjs",
  "types": "./dts/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/milesj/moon",
    "directory": "packages/runtime"
  },
  "files": [
    "dts/**/*.d.ts",
    "mjs/**/*.{mjs,map}",
    "src/**/*.{ts,tsx,json}"
  ],
  "packemon": {
    "format": "mjs",
    "platform": "node",
    "bundle": true
  },
  "dependencies": {
    "@boost/common": "^3.2.1"
  },
  "engines": {
    "node": ">=14.15.0",
    "npm": ">=6.14.0"
  },
  "exports": {
    "./package.json": "./package.json",
    "./*": {
      "types": "./dts/*.d.ts"
    },
    ".": {
      "types": "./dts/index.d.ts",
      "node": {
        "import": "./mjs/index.mjs"
      }
    }
  }
}
